<p id="notice"><%= notice %></p>
<div>
<h1>Clientes</h1>
</div>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Nombre cliente</th>
      <th>Rfc</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clientes.each do |cliente| %>
      <tr>
        <td><%= cliente.nombre_cliente %></td>
        <td><%= cliente.rfc %></td>
        <td><%= link_to 'Visualizar', cliente %></td>
        <td><%= link_to 'Editar', edit_cliente_path(cliente) %></td>
        <td><%= link_to 'Eliminar', cliente, method: :delete, data: { confirm: 'Seguro de eliminar?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<button type="button" class="btn btn_primary btn_lg btn_block"><%= link_to 'Agregar Nuevo Cliente', new_cliente_path %> </button>


