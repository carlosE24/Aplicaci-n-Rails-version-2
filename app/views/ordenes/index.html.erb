<p id="notice"><%= notice %></p>

<h1>Ordenes</h1>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Cliente</th>
      <th>Numero de orden</th>
      <th>Fecha</th>
      <th>Producto</th>
      <th>Cantidad</th>
      <th>Precio venta</th>
      <th colspan="6"></th>
    </tr>
  </thead>

  <tbody>
    <% @ordenes.each do |ordene| %>
      <tr>
        <td><%= ordene.cliente_id %></td>
        <td><%= ordene.numero_de_orden %></td>
        <td><%= ordene.fecha %></td>
        <td><%= ordene.producto_id %></td>
        <td><%= link_to 'Visualizar', ordene %></td>
        <td><%= link_to 'Editar', edit_ordene_path(ordene) %></td>
        <td><%= link_to 'Eliminar', ordene, method: :delete, data: { confirm: 'Seguro de eliminar?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<button type="button" class="btn btn_primary btn_lg btn_block"><%= link_to 'Nueva Orden', new_ordene_path %> </button>

